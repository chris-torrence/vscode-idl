{
  "name": "idl",
  "displayName": "IDL Interactive Data Language",
  "description": "IDL syntax highlighting and code snippets",
  "version": "1.7.0",
  "publisher": "CT6502",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/chris-torrence/vscode-idl"
  },
  "scripts": {
    "contributors:init": "all-contributors init",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "compile": "tsc -b",
    "deploy": "cd client && npm run compile && cd .. && cd server && npm run webpack-deploy",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "npm run compile && npm run test-client && npm run test-server",
    "test-client": "cd client && npm test",
    "test-server": "cd server && npm test",
    "vscode:prepublish": "npm run test && npm run deploy",
    "watch": "tsc -b -w"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.54",
    "all-contributors-cli": "^4.11.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "merge-options": "^1.0.1",
    "mocha": "^6.2.1",
    "ts-loader": "^6.2.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "vscode-test": "^1.2.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "activationEvents": [
    "onLanguage:idl",
    "workspaceContains:**/*.pro",
    "onView:idl-tree",
    "onCommand:idl.openIDL",
    "onCommand:idl.compileFile",
    "onCommand:idl.runFile",
    "onCommand:idl.stopExecution",
    "onCommand:idl.continueExecution",
    "onCommand:idl.stepIn",
    "onCommand:idl.stepOver",
    "onCommand:idl.stepOut",
    "onCommand:idl.resetIDL"
  ],
  "main": "./client/dist/extension",
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/idlicon.png",
  "contributes": {
    "commands": [
      {
        "command": "idl.openIDL",
        "title": "IDL: Open a Terminal"
      },
      {
        "command": "idl.compileFile",
        "title": "IDL: Compile File"
      },
      {
        "command": "idl.runFile",
        "title": "IDL: Run"
      },
      {
        "command": "idl.stopExecution",
        "title": "IDL: Stop Execution"
      },
      {
        "command": "idl.continueExecution",
        "title": "IDL: Continue Execution"
      },
      {
        "command": "idl.stepIn",
        "title": "IDL: Step In"
      },
      {
        "command": "idl.stepOver",
        "title": "IDL: Step Over"
      },
      {
        "command": "idl.stepOut",
        "title": "IDL: Step Out"
      },
      {
        "command": "idl.resetIDL",
        "title": "IDL: Reset"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "idl-view",
          "title": "IDL",
          "icon": "images/idlicon.svg"
        }
      ]
    },
    "views": {
      "idl-view": [
        {
          "id": "idl-tree",
          "name": "Actions and Commands"
        }
      ]
    },
    "languages": [
      {
        "id": "idl",
        "aliases": [
          "IDL",
          "idl"
        ],
        "extensions": [
          ".pro"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "json",
        "aliases": [
          "Task",
          "task"
        ],
        "extensions": [
          ".task"
        ]
      },
      {
        "id": "json",
        "aliases": [
          "Style",
          "style"
        ],
        "extensions": [
          ".style"
        ]
      },
      {
        "id": "json",
        "aliases": [
          "Model",
          "model"
        ],
        "extensions": [
          ".model"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.task",
        "url": "./schemas/tasks.json"
      }
    ],
    "grammars": [
      {
        "language": "idl",
        "scopeName": "source.idl",
        "path": "./syntaxes/idl.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "idl",
        "path": "./snippets/idl.json"
      },
      {
        "language": "idl",
        "path": "./snippets/loops.json"
      },
      {
        "language": "idl",
        "path": "./snippets/conditionals.json"
      },
      {
        "language": "idl",
        "path": "./snippets/envi.json"
      },
      {
        "language": "idl",
        "path": "./snippets/objects.json"
      },
      {
        "language": "idl",
        "path": "./snippets/tests.json"
      }
    ]
  },
  "__metadata": {
    "id": "6d16eefa-72a8-4d42-8b60-923da419ad11",
    "publisherId": "57c04141-2024-405c-9c48-49d3db0f7402",
    "publisherDisplayName": "CT6502"
  }
}
