{
  "Procedure (class definition)": {
		"prefix": "pro",
		"body": [
      ";+",
      "; :Description:",
      ";     Constructor",
      ";-",
      "function $1::Init, _EXTRA=extra",
      "  compile_opt idl2",
      "",
      "  if (ISA(extra)) then $",
      "    self->$1::SetProperty, _EXTRA=extra",
      "  return, 1",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Destructor",
      ";-",
      "pro $1::Cleanup",
      "  compile_opt idl2",
      "",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Accessor",
      ";-",
      "pro $1::GetProperty, _REF_EXTRA=extra",
      "  compile_opt idl2",
      "",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Mutator",
      ";-",
      "pro $1::SetProperty, _EXTRA=extra",
      "  compile_opt idl2",
      "",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Class definition procedure",
      ";-",
      "pro $1__define",
      "  compile_opt idl2",
      "",
      "  struct = {$1}",
      "end"
		],
		"description": "Procedure (class definition)",
		"scope": "source.idl"
  },
  "Procedure (class with superclass)": {
		"prefix": "pro",
		"body": [
      ";+",
      "; :Description:",
      ";     Constructor",
      ";-",
      "function $1::Init, _EXTRA=extra",
      "  compile_opt idl2",
      "",
      "  if (~self->$2::Init(_EXTRA=extra)) then $",
      "    return, 0",
      "",
      "  if (ISA(extra)) then $",
      "    self->$1::SetProperty, _EXTRA=extra",
      "  return, 1",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Destructor",
      ";-",
      "pro $1::Cleanup",
      "  compile_opt idl2",
      "  self->$2::Cleanup",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Accessor",
      ";-",
      "pro $1::GetProperty, _REF_EXTRA=extra",
      "  compile_opt idl2",
      "",
      "  if (ISA(extra)) then $",
      "    self->$2::GetProperty, _EXTRA=extra",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Mutator",
      ";-",
      "pro $1::SetProperty, _EXTRA=extra",
      "  compile_opt idl2",
      "",
      "  if (ISA(extra)) then $",
      "    self->$2::SetProperty, _EXTRA=extra",
      "end",
      "",
      ";+",
      "; :Description:",
      ";     Class definition procedure",
      ";-",
      "pro $1__define",
      "  compile_opt idl2",
      "",
      "  struct = {$1, $",
      "    inherits $2 $",
      "  }",
      "end"
		],
		"description": "Procedure (class with superclass)",
		"scope": "source.idl"
  },
  "Procedure (method)": {
		"prefix": "pro",
		"body": [
			"pro $1::$2",
			"  compile_opt idl2",
			"",
			"  $0",
			"",
			"end",
			""
		],
		"description": "Procedure (method)",
		"scope": "source.idl"
	},
  "Function (method)": {
		"prefix": "function",
		"body": [
			"function $1::$2",
			"  compile_opt idl2",
			"",
			"  $0",
			"",
			"end",
			""
		],
		"description": "Function (method)",
